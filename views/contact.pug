extends layout.pug
block style
 style
     include ../static/stylecontact.css
     include ../static/layoutstyle.css
block content
 div.contactbg 
  h1.center Contact Us
 div.headingtext
  h1.center Wanna Clear Your Doubts? 
  div#formsection 
   form#formarea(action="/contact", method="POST")
    input(type="text" name="name" placeholder="Enter Your Name")
    input(type="number" name="age" placeholder="Enter Your Age")
    input(type="email" name="email" placeholder="Enter Your Email")
    select#faculty
     option(value="faculty") Choose Your Faculty
     option(value="BBA")  BBA
     option(value="BBS")  BBS
     option(value="BIT")  BIT
     option(value="CSIT")  CSIT
     option(value="BIT")  BIT
     option(value="B-Tech")  B-TECH
     option(value="BCA")  BCA
     option(value="Acturail Science") Acturial Science
     option(value="AG")  Agriculture
     option(value="Civil Engineering")  Civil Engineering
     option(value="Mechanical Engineering")  Mechanical Engineering
     option(value="SOMS")  School Of Mathematical Science
     option(value="Geomatics Engineering")  Geomatics Engineering
     option(value="Industrial Engineering")  Industrial Engineering
     option(value="IIT")  IIT
    input(type="text" name="course" placeholder="Enter Your Course")
    input(type="text" name="question" placeholder="Enter Your Question ")
    textarea#issue(name="issue", cols="30", rows="10" placeholder = "Enter Your Issue")
    button.btn Submit
  